<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.mudryakov.collectivenote.screens.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_historyFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"         />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.mudryakov.collectivenote.screens.mainScreen.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_mainFragment_to_newPaymentFragment"
            app:destination="@id/newPaymentFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_mainFragment_to_helpFragment"
            app:destination="@id/helpFragment" />
        <action
            android:id="@+id/action_mainFragment_to_singleUserPayments"
            app:destination="@id/singleUserPayments" />
        <action
            android:id="@+id/action_mainFragment_to_roomInfoFragment"
            app:destination="@id/roomInfoFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mudryakov.collectivenote.screens.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_roomChooseFragment"
            app:destination="@id/roomChooseFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"/>
        <action
            android:id="@+id/action_loginFragment_to_emailRegistrationFragment"
            app:destination="@id/emailRegistrationFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/newPaymentFragment"
        android:name="com.mudryakov.collectivenote.screens.addNewPayment.NewPaymentFragment"
        android:label="fragment_new_payment"
        tools:layout="@layout/fragment_new_payment" >
        <action
            android:id="@+id/action_newPaymentFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/fragment_close_exit"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph" />
    </fragment>
    <fragment
        android:id="@+id/roomChooseFragment"
        android:name="com.mudryakov.collectivenote.screens.roomChoose.RoomChooseFragment"
        android:label="fragment_room_choose"
        tools:layout="@layout/fragment_room_choose" >
        <action
            android:id="@+id/action_roomChooseFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"/>
    </fragment>
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.mudryakov.collectivenote.screens.help.HelpFragment"
        android:label="fragment_help"
        tools:layout="@layout/fragment_help" >
        <action
            android:id="@+id/action_helpFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"/>
    </fragment>
    <fragment
        android:id="@+id/singleUserPayments"
        android:name="com.mudryakov.collectivenote.screens.singleUserPayments.SingleUserPayments"
        android:label="fragment_single_user_payments"
        tools:layout="@layout/single_payment_fragment" >
        <action
            android:id="@+id/action_singleUserPayments_to_mainFragment"
            app:destination="@id/mainFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"/>
    </fragment>
    <fragment
        android:id="@+id/roomInfoFragment"
        android:name="com.mudryakov.collectivenote.screens.roomInfo.RoomInfoFragment"
        android:label="fragment_room_info"
        tools:layout="@layout/fragment_room_info" >
        <action
            android:id="@+id/action_roomInfoFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"/>
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.mudryakov.collectivenote.screens.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"/>
    </fragment>
    <fragment
        android:id="@+id/emailRegistrationFragment"
        android:name="com.mudryakov.collectivenote.screens.emailRegistration.EmailRegistrationFragment"
        android:label="EmailRegistrationFragment" >
        <action
            android:id="@+id/action_emailRegistrationFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph" />
    </fragment>
</navigation>